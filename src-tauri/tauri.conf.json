{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Super Imposer",
    "version": "24.3.11-rc2"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "window": {
        "create": true,
        "show": true
      },
      "dialog": {
        "message": true,
        "save": true,
        "open": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utilities",
      "targets": "all",
      "identifier": "SuperImposer3000",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.super-imposer.stucco.software/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc4RTg5MDAyNDhCQTZGOTEKUldTUmI3cElBcERvZUFRQm9TZ2JpRXlmenBYYVVUOS9TTGlsdjhmR0JHNGx0dFVkMWJRUE5QTTMK"
    },
    "windows": [
      {
        "label": "new",
        "fullscreen": false,
        "resizable": false,
        "title": "Input",
        "width": 300,
        "height": 425
      },{
        "label": "settings",
        "fullscreen": false,
        "resizable": true,
        "title": "Settings",
        "width": 300,
        "height": 268,
        "url": "settings.html",
        "visible": false
      },{
        "label": "preview",
        "fullscreen": false,
        "resizable": true,
        "title": "Preview",
        "width": 800,
        "height": 600,
        "url": "preview.html",
        "visible": false
      },{
        "label": "about",
        "fullscreen": false,
        "resizable": false,
        "title": "About",
        "width": 200,
        "height": 308,
        "url": "about.html",
        "visible": false
      }
    ]
  }
}
