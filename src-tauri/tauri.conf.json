{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Super Imposer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "dialog": {
        "save": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utilities",
      "targets": "all",
      "identifier": "com.imposer.stucco.software",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "new",
        "fullscreen": false,
        "resizable": true,
        "title": "New Project",
        "width": 400,
        "height": 650
      },{
        "label": "about",
        "fullscreen": false,
        "resizable": false,
        "title": "About Super Imposer",
        "width": 250,
        "height": 350,
        "url": "about.html"
      }
    ]
  }
}
